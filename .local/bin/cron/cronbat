#!/bin/env zsh

# cat /sys/class/power_supply/BAT0/{status,capacity} | {
# 	read -d "\n" status capacity
#   [ "$status" = "Charging" ] && exit
#   [ "$capacity" -lt 50 ] && notify-send -u critical "$capacity% $status"
# }

# If running as root use "sudo -i" though audio doesn't work
# date +%T | awk -F ':' '($1 >= 1 && $2 <= 59)' | xargs -I_ [ -z _ ] || (echo "23:59 hours ðŸ›Œ lights out" | tee >(festival --tts) >(xargs -I_ sudo -i notify-send -u critical _ ) )

countdown() {
  NID=0
  for i in {$1..0..1}
    do
      NID=$(notify-send -p -r $NID "${i}" )
      sleep 1
    done
}

# TO STOP SHUTDOWN:
# ps aux | grep cronbat | awk '{print $2}' | xargs kill -9 && killall notify-send

date +%T | awk -F ':' '($1 >= 23 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "23:50 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 40)' | xargs -I_ [ -z _ ] || (echo "23:40 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 30)' | xargs -I_ [ -z _ ] || (echo "23:30 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 20)' | xargs -I_ [ -z _ ] || (echo "23:20 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 10)' | xargs -I_ [ -z _ ] || (echo "23:10 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 00)' | xargs -I_ [ -z _ ] || (echo "23:00 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "22:50 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 40)' | xargs -I_ [ -z _ ] || (echo "22:40 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 30)' | xargs -I_ [ -z _ ] || (echo "22:30 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 20)' | xargs -I_ [ -z _ ] || (echo "22:20 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
# date +%T | awk -F ':' '($1 >= 22 && $2 == 10)' | xargs -I_ [ -z _ ] || (echo "22:10 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
# date +%T | awk -F ':' '($1 >= 22 && $2 == 00)' | xargs -I_ [ -z _ ] || (echo "22:00 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
# date +%T | awk -F ':' '($1 >= 21 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "21:50 hours ðŸ›Œ" | tee >(festival --tts) && countdown 600 && sudo poweroff)
date +%T | awk -F ':' '($1 >= 21 && $2 == 50) {exit 1}'        || (festival --tts <<<"$(date +%T) hours ðŸ’¤" && notify-send -u low "$(date +%T) hours ðŸ’¤")
date +%T | awk -F ':' '($1 >= 21 && $2 ~".0") {print $1":"$2}' |   festival --tts
date +%T | awk -F ':' '($1 ~ "." && $2 == 00) {print $1":"$2}' |   festival --tts
cat /sys/class/power_supply/BAT0/status   | awk '$1 == "Discharging" {exit 1}' &&
cat /sys/class/power_supply/BAT0/capacity | awk '$1 >= 95 {system("festival --tts <<<complete-charge") }'
cat /sys/class/power_supply/BAT0/status   | awk '$1 == "Charging" {exit 1}' &&
cat /sys/class/power_supply/BAT0/capacity | awk '$1 <= 10 {system("festival --tts <<<"$1"-percent") } ; $1 <= 5 {system("notify-send -u critical " $1 "% discharging\n") }'
