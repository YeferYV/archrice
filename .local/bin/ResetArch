  bat \
  fzf \
  imagemagick \
  mpv-mpris \
  pipewire-pulse \
  ripgrep \
  starship \
  stow \
  xclip \
  yazi \
  && true | $SUDO pacman -Scc || ( printf "$(tput -T ansi setaf 1) Installing Non GUI deps failed! $(tput -T ansi sgr0)" && exit 1 )
  # ghostscript \
  # kitty \
  # lf \
  # libsixel \
  # poppler \

echo "$(tput -T ansi setaf 3) Installing Packages... Done! $(tput -T ansi sgr0)"

