  # yes | yay -S --noconfirm visual-studio-code-bin                &&
  # yes | yay -S --noconfirm dragon-drop                           &&
  yes | yay -S --noconfirm bspwm-git                             &&
  yes | yay -S --noconfirm cht.sh-git                            &&
  yes | yay -S --noconfirm kanata-bin                            &&
  yes | yay -S --noconfirm light                                 &&
  yes | yay -S --noconfirm ripdrag-git                           &&
  yes | yay -S --noconfirm siji-git                              &&
  yes | $SUDO pacman -S --noconfirm --needed \
  bat \
  broadcom-wl \
  btrfs-progs \
  cronie \
  dosfstools \
  dmenu \
  dunst \
  exfat-utils \
  eza \
  festival-us \
  gnome-keyring \
  libnotify \
  man-db \
  mpc \
  mpd \
  ncmpcpp \
  network-manager-applet \
  noto-fonts \
  noto-fonts-emoji \
  ntfs-3g \
  picom \
  polybar \
  redshift \
  snapper \
  sxhkd \
  sxiv \
  ttf-firacode-nerd \
  unclutter \
  wezterm \
  xorg-server \
  xorg-xinit \
  xorg-xsetroot \
  xf86-input-synaptics \
  xwallpaper \
  zathura-pdf-poppler \
  zram-generator \
  && true | yay -Scc || ( printf "$(tput -T ansi setaf 1) Installing GUI deps failed! $(tput -T ansi sgr0)" && exit 1 )
  # github-cli
  # perl-file-mimeinfo \
  # playerctl \
  # rofi \
  # rofimoji \
  # ttf-font-awesome
  # xdo \
  # xdotool \
  # xorg-xrdb \
  # xorg-xwininfo \
}

# Non GUI dependencies:
