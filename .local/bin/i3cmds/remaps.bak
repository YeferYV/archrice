#!/bin/sh

## This script is called on startup to remap keys.
## Increase key speed via a rate change
xset r rate 300 50
## Map the caps lock key to super...
#setxkbmap -option caps:super
## Map the caps lock key to control...
#setxkbmap -option caps:ctrl_modifier
setxkbmap -option ctrl:nocaps
#setxkbmap -option ctrl:swapcaps
## Map the super key to meta key
#setxkbmap -option altwin:meta_win
## Map the caps lock key to Escape
#xmodmap -e 'clear lock'
#xmodmap -e 'keycode 66 = Escape'
## But when it is pressed only once, treat it as escape.
#killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape'
## But when it is pressed only once, treat it as escape.
killall xcape 2>/dev/null ; xcape -e 'Control_L=Escape'
## Map the menu button to right super as well.
xmodmap -e 'keycode 135 = Super_R'

#########################################################
## to use Alt_R key as enter
#xcape -t 200 -e 'Alt_R=BackSpace'
## to use Control_L as Escape
#xcape -e 'Control_L=Escape'
## to use Alt_L as middle click
xcape -e 'Alt_L=KP_Next'
## to use Super_L as left click
xcape -e 'Super_L=KP_Prior'
## to use Meta_L as left click
#xcape -e 'Meta_L=KP_Prior'
## to stop Escape from repeating
xset -r 9
## to stop Tab from repeating
xset -r 23
## to stop Caps_Lock from repeating
xset -r 66
## To start binding keys
#xmodmap .config/sxhkd/Xmodmaprc
#xbinkeys --file .config/sxhkd/Xbinkeysrc
sxhkd -c .config/sxhkd/sxhkdrc &
#sxhkd -c .config/sxhkd/sxhkdrc.backup &
######################################################
