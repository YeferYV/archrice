########################################
###      window_hotkeys           ###
#######################################

## increase/decrease whole window
super+backslash
  xdo resize -w 800 -h 600
super+a
  xdo resize -w 681 -h 382
super+shift+backslash
  hover moveleft 50; hover moveup 25; xdo resize -w +100 -h +50
super+shift+a
  hover moveright 50; hover movedown 25; xdo resize -w -100 -h -50

## move window
# super+shift+j
#   hover moveleft 80
# super+shift+semicolon
#   hover moveright 80
# super+shift+k
#   hover movedown 40
# super+shift+l
#   hover moveup 40

super+ctrl+j
  hover moveleft 10
super+ctrl+semicolon
  hover moveright 10
super+ctrl+k
  hover movedown 10
super+ctrl+l
  hover moveup 10

## increase window edges
super+u
  hover left
super+p
  hover right
super+i
  hover down
super+o
  hover up

super+shift+u
  hover moveleft 30; xdo resize -w +30
super+shift+p
  xdo resize -w +30
super+shift+i
  xdo resize -h +30
super+shift+o
  hover moveup 30; xdo resize -h +30

super+ctrl+u
  hover moveleft 10; xdo resize -w +10
super+ctrl+p
  xdo resize -w +10
super+ctrl+i
  xdo resize -h +10
super+ctrl+o
  hover moveup 10; xdo resize -h +10

## decrease window edges
super+n
  xdo move -x 200 -y 15; xdo resize -w 1151 -h 738
  #xdo move -x 250 -y 15; xdo resize -w 1101 -h 738
super+shift+n
  xdo move -x -1 -y -1; xdo resize -w 1366 -h 768
super+m
  xdo move -x 1 -y 1; xdo resize -w 681 -h 766
super+comma
  xdo move -x 1 -y 385; xdo resize -w 1364 -h 382
super+period
  xdo move -x 1 -y 1; xdo resize -w 1364 -h 382
super+slash
  xdo move -x 684 -y 1; xdo resize -w 681 -h 766

super+shift+m
  hover moveright 30 && xdo resize -w -30
super+shift+comma
  hover movedown 30 && xdo resize -h -30
super+shift+period
  xdo resize -h -30
super+shift+slash
  xdo resize -w -30

super+ctrl+m
  hover moveright 10 && xdo resize -w -10
super+ctrl+comma
  hover movedown 10 && xdo resize -h -10
super+ctrl+period
  xdo resize -h -10
super+ctrl+slash
  xdo resize -w -10


