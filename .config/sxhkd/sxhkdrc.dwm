XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
super+XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
super+XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
XF86MonBrightnessDown
  sudo light -U .11
XF86MonBrightnessUp
  sudo light -A .11
super+XF86MonBrightnessDown
  sudo light -U 2
super+XF86MonBrightnessUp
  sudo light -A 2
shift+XF86MonBrightnessDown
  xcalib -co 75 -a
shift+XF86MonBrightnessUp
  xcalib -c
super+F11
  dmenumount
super+F12
  dmenuumount
super+KP_Up
  [[ "$(playerctl -p mpv volume)" < 1 ]]&& playerctl --player=mpv volume 0.1+
super+KP_Down
  playerctl --player=mpv volume 0.1-
super+KP_Right
  playerctl --player=mpv next
super+KP_Begin
  playerctl --player=mpv play-pause
super+KP_Left
  playerctl --player=mpv previous
KP_Right
  mpc next
KP_Begin
  mpc toggle
KP_Left
  mpc prev
mod1+XF86AudioRaiseVolume
  mpc next
mod1+XF86AudioMute
  mpc toggle
mod1+XF86AudioLowerVolume
  mpc prev
