# dmenu launcher
super + {_,shift +,alt +} p
	{ \
		dmenu_run; \
	, wezterm start $(dmenu_path | dmenu); \
  , source $HOME/.config/shell/aliasrc && \
		alias | dmenu -i -l 10 | awk -F'=' '\{print $2\}' | xargs -I_ wezterm start -- bash -c "_"; \
	}

