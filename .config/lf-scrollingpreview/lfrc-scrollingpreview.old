set previewer lf-scrollingpreview-previewer

map <lt> decoffset
map <gt> incoffset

cmd incoffset &{{
	offset="$(cat "$LF_SCROLLINGPREVIEW_TEMPFILE")"
	echo "$(( offset + 1 ))" >"$LF_SCROLLINGPREVIEW_TEMPFILE"
}}

cmd decoffset &{{
	offset="$(cat "$LF_SCROLLINGPREVIEW_TEMPFILE")"
	if [ "$offset" -gt 1 ]; then
		echo "$(( offset - 1 ))" >"$LF_SCROLLINGPREVIEW_TEMPFILE"
	fi
}}

